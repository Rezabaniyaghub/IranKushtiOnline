@model SchoolModel
@{
    string Message = ViewBag.Message;
}
@if (!string.IsNullOrWhiteSpace(Message))
{
    <div class="alert alert-danger col-md-3">
        <span>با موفقیت ذخیره نشد لطفا جاهای خالی را با دقت پر کنید</span>
        <br/>
        @Message
    </div>
}

<div class="Rz">
<form class="container" action="/School/Create" method="post" >
        <div class="col-md-12" align="center">
            <div class="row col-md-3">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm"> نام باشگاه</span>
                </div>
                    <input type="text"  class="form-control" asp-for="Name" aria-label="Name" aria-describedby="inputGroup-sizing-sm" />
            </div>
                <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="row col-md-3">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm"> شماره تلفن</span>
                </div>
                <input type="tel" class="form-control" asp-for="PhoneNumber" aria-label="PhoneNumber" aria-describedby="inputGroup-sizing-sm" />
            </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="row col-md-3">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm"> آدرس</span>
                </div>
                <input type="text" class="form-control" asp-for="Address" aria-label="Address" aria-describedby="inputGroup-sizing-sm" />
            </div>
                <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="row col-md-3">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm"> ظرفیت</span>
                </div>
                <input type="text" class="form-control" asp-for="Capacity" aria-label="Capacity" aria-describedby="inputGroup-sizing-sm" />
            </div>
                <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <br />
        <div class="col-md-3 form-group">
            <button type="submit" class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="right" title="ذخیره">
                <i class="fas fa-save" style="font-size:25px;color:red"></i>
                ذخیره
            </button>
        </div>
    </div>
</form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}