@model List<SchoolModel>
@{
    ViewData["Title"] = "لیست باشگاه ها";
}

<body class="image2">
    <div class="container">
        <div class="col-sm" style="background-color:white;opacity: 0.8;">
            <a asp-controller="School" asp-action="Create" class="btn btn-sm btn-danger">
                <i class="fas fa-plus fa-3" aria-hidden="true"
                   style="font-size:25px;color:aqua">
                </i>
                افزودن باشگاه
            </a>
            @{
                if (Model != null && Model.Count() > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>شناسه</th>
                                    <th>نام باشگاه</th>
                                    <th>آدرس</th>
                                    <th>شماره تلفن</th>
                                    <th>ظرفیت</th>
                                    <th>تاریخ ثبت نام</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td data-label="شناسه :"> @item.Id</td>
                                        <td data-label="نام باشگاه :"> @item.Name</td>
                                        <td data-label="آدرس :"> @item.Address</td>
                                        <td data-label="شماره تلفن :"> @item.PhoneNumber</td>
                                        <td data-label="ظرفیت :"> @item.Capacity</td>
                                        <td data-label="تاریخ ثبت نام :"> @item.CreateDate</td>
                                        <td>
                                            <a href="/School/Edit?id=@item.Id" class="btn btn-info table-responsive" style="width:120px;">
                                                <i class="fas fa-edit" style="font-size:25px;color:red;"></i>
                                                ویرایش
                                            </a>
                                            <a asp-controller="School" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="width:120px;">
                                                <i class="fas fa-trash fa-3" aria-hidden="true"
                                                   style="font-size:25px;color:aqua">
                                                </i>
                                                حذف
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                }
            }
        </div>
    </div>
</body>
