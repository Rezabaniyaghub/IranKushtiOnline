@model List<SchoolModel>

<body class="image2">
    <div class="container">
        <div class="col-sm" style="background-color:white;opacity: 0.8;">
            <a asp-controller="School" asp-action="Create" class="btn btn-sm btn-danger" style="width:140px;">
                <i class="fas fa-plus fa-3" aria-hidden="true"
                   style="font-size:25px;color:aqua">
                </i>
                افزودن باشگاه
            </a>
            @{
                if (Model != null && Model.Count() > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover btn">
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>شناسه : @item.Id</td>
                                        <td>نام باشگاه : @item.Name</td>
                                        <td>شماره تلفن : @item.PhoneNumber</td>
                                        <td>آدرس : @item.Address</td>
                                        <td>ظرفیت : @item.Capacity</td>
                                        <td>تاریخ ثبت نام : @item.CreateDate</td>
                                        <td>
                                            <a href="/School/Edit?id=@item.Id" class="btn btn-info table-responsive" style="width:120px;">
                                                <i class="fas fa-edit" style="font-size:25px;color:red;"></i>
                                                ویرایش
                                            </a>
                                            <a asp-controller="School" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="width:120px;">
                                                <i class="fas fa-trash fa-3" aria-hidden="true"
                                                   style="font-size:25px;color:aqua">
                                                </i>
                                                حذف
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                }
            }
        </div>
    </div>
</body>
